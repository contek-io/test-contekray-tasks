task:
  name: {{name_prefix}}-{{ node }}
  working_dir: {{ working_dir }}
  runtime_env:
    pip:
  exclude_dirs:
  - .venv
  working_dir_type: cephfs
  retry: {{ retry }}
  entrypoint: python test_cephfs_io.py {{ node }} {{ working_dir }}
resources:
  replicas: 1
  cpu: 2
  memory: 4Gi
image: latest
tolerations:
- key: status
  operator: "Equal"
  value: "PendingAcceptance"
  effect: "NoSchedule"
exclude_nodes:{% for e in exclude_nodes %}
  - {{ e }}
{%- endfor %}
